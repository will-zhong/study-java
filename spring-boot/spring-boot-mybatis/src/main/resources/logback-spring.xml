<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yy-MM-dd HH:mm:ss.SSS} %highlight(%5level) [%20thread] %cyan(%-60logger{60} %5line): %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.wei" level="debug"/>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>